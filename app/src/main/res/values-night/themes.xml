        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryVariant">@color/primariaDark</item>
        <item name="colorOnPrimary">@color/textPrimaria</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundaria</item>
        <item name="colorSecondaryVariant">@color/secundariaDark</item>
        <item name="colorOnSecondary">@color/textSecundaria</item>
